.columns
  %h2 #{@area.name}: Issues

  %h5= link_to 'Add new', new_admin_area_issue_path(@area)

  %table
    %tr
      %th Subject
      %th Scheduled At
      %th Sent at
    - @area.issues.each do |issue|
      %tr
        %td= link_to issue.subject, edit_admin_area_issue_path(@area, issue)
        %td
          - if issue.scheduled_at.present?
            = issue.scheduled_at.to_s(:long)
          - else
            N/A        
        %td
          - if issue.sent_at.present?
            = issue.sent_at.to_s(:long)
          - else
            N/A
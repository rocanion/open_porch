%h2 Users for #{@area.name}
%h5
  = link_to 'Add', [:new, :admin, :area, :user]
%ul.list
  - @users.each do |user|
    - area = user.memberships.first.area
    %li
      %h4 #{user.name} in #{area.city}, #{area.state}
      .action
        = link_to 'edit', [:edit, :admin, @area, :user]
        |
        = link_to 'delete', admin_area_path(area), :method => :delete, :confirm => 'Are you sure you want to delete this area?'
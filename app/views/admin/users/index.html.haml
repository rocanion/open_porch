.columns
  %h2 
    = will_paginate @accounts
    Users
    


  %table
    %tr
      %th Name
      %th Email
      %th Role
      %th
      
    - @users.each do |user|
      %tr
        %td= link_to user.full_name, [:edit, :admin, user]
        %td= user.email
        %td= user.role.humanize
        %td
          = link_to 'delete', admin_user_path(user), :method => :delete, :confirm => 'Are you sure you want to delete this user?'
          
  = will_paginate @accounts

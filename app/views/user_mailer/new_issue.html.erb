<h2>Issue <%= @issue.number %> - <%= @issue.area.name %></h2>

<% @issue.posts.order('position').each do |post| %>
  <h3><%= post.title %></h3>
  <p class="author"> 
    By 
    <strong><%= post.user.full_name%>,  <%=post.user.address %></strong>
    <br/>
    <%= post.created_at.to_s(:long) %>
  </p>
  <%= simple_format(auto_link(post.content)) %>
<% end %>

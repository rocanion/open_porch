= content_for :head do
  = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
  
:javascript
  function initialize() {
    var latlng = new google.maps.LatLng(#{@areas.first.center.x}, #{@areas.first.center.y});
    var myOptions = {
      zoom: 14,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      scaleControl: true
    };
    var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
    
    var marker = new google.maps.Marker({
        position: latlng, 
        map: map, 
        title:"You are here!"
    });
      
    #{draw_areas(@areas)}
  }

= content_for :doc_ready do
  initialize();

%h1 Areas

#map_canvas{:style => 'width:100%; height:500px'}

  
  
= content_for :head do
  = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
  
:javascript
  function initialize() {
    var latlng = new google.maps.LatLng(#{@areas.first.border.rings.first.points.first.x}, #{@areas.first.border.rings.first.points.first.y});
    var myOptions = {
      zoom: 14,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
    
    #{draw_areas([@areas.first])}
  }

= content_for :doc_ready do
  initialize();

%h1 Areas

#map_canvas{:style => 'width:400px; height:400px'}

  
  